# Archivos de IDE
# -----------------------------------------------------------------------------
# Android Studio / IntelliJ IDEA
.idea/
*.iml
*.iws
*.ipr

# Visual Studio Code
.vscode/
*.code-workspace

# Eclipse
.project
.classpath
.settings/

# NetBeans
nbproject/
nbbuild/
nbdist/
nbactions.xml

# -----------------------------------------------------------------------------
# Android / Gradle
# -----------------------------------------------------------------------------
# Build outputs
build/
*.apk
*.ap_
*.aab
*.dex

# Gradle
.gradle/
gradle-app.setting
!gradle-wrapper.jar
!gradle-wrapper.properties

# Local configuration file
local.properties

# Proguard folder generated by Eclipse
proguard/

# Log Files
*.log

# Android Studio Navigation editor temp files
.navigation/

# Android Studio captures folder
captures/

# External native build folder
.externalNativeBuild/
.cxx/

# Google Services (if contains sensitive keys)
# google-services.json

